	}
	
	public static void Question1a()
	{
		System.out.println ("Question 1a");
		int binary1 = 0b10101111;
		int binary2 = 0b11011101;
		int result = binary1 & binary2;
		System.out.println ("  " + stringBin(binary1) + " {"+ binary1 +"}");
		System.out.println ("& " + stringBin(binary2) + " {"+ binary2 +"}");
		System.out.println (DIVIDER);
